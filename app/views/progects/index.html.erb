
<%  @progect.each do |p| %>


<table>

<tr class="head_tr">
<td></td>

<td><h1><%= p.name %></h1></td>

<td>





<%=link_to  edit_progect_path(p) do %>  <i class = "foundicon-edit"></i> <% end %>
<%=link_to  progect_path(p), :confirm => "yes" do %> <i class = "foundicon-remove"></i> <% end %> </td>
</tr>

<tr class="add_tr">
<td><%= link_to new_progect_task_path(p) do  %>
<i class = "foundicon-add-doc"></i> <% end %> </td>

<td><%= form_tag(:action=>"add",:controller=>"tasks", :progect_id => p.id) do %>
<%=text_field_tag (:name) %></td>

<td><%=submit_tag("Add",:class => "add_button")  %></td>
<% end %>
</tr>



<% p.tasks.order("priority DESC").each do |t| %>
<tr class= "task_tr">

<td><%=link_to  [p,t] do %> <i class = "foundicon-folder"></i> <% end %></td>
<td><%= t.name %></td>

<td>
<%= link_to  edit_progect_task_path(p,t) do %>
<i class = "foundicon-edit"> </i> <% end %>
<%= link_to  progect_task_path(p,t), :method=>"delete", :confirm=>"yes" do %>
<i class = "foundicon-remove"></i> <% end %>

<%= link_to raw('<i class = "foundicon-up-arrow"></i>') , :action => "up_priority", :controller =>"tasks", :id=> t.id %>
<%= link_to raw('<i class = "foundicon-down-arrow"></i>'), :action => "down_priority", :controller =>"tasks", :id=> t.id%></td>


</td>
<% end %>
</tr>


</table>
<% end %>



<div>
<%=link_to "New progect", new_progect_path, :class =>"new_progect_button" %>
</div>
